{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "allowJs": true,  // ✅ Allows JavaScript files
    "checkJs": false, // ✅ Prevents TypeScript from checking JavaScript files strictly
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",   // ✅ Include JavaScript files
    "**/*.jsx",  // ✅ Include JSX files
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/_layout.js" // ✅ Explicitly include _layout.js
  ]
}
